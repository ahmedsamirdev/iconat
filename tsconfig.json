{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
